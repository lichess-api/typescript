{
  "name": "@lichess/api",
  "version": "0.0.3",
  "type": "module",
  "author": "gameroman",
  "license": "MIT",
  "scripts": {
    "gen:schemas": "bun ./scripts/gen-schemas",
    "gen:client": "bun ./scripts/gen-client",
    "gen": "bun run gen:schemas && bun run gen:client && bun run format",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "biome check ./src",
    "format": "biome check --write --linter-enabled=false",
    "build": "bunx --bun tsdown",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "api",
    "lichess"
  ],
  "imports": {
    "#lib/*": "./src/lib/*.ts",
    "#schemas": "./src/schemas/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lichess-api/typescript.git"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "dependencies": {
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@types/bun": "^1.3.8",
    "@typescript/native-preview": "^7.0.0-dev.20260209.1",
    "tsdown": "^0.20.3"
  },
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./dist/index.mjs",
    "./schemas": "./dist/schemas.mjs",
    "./package.json": "./package.json"
  }
}
