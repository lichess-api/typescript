{
  "name": "@lichess/api",
  "version": "0.0.2",
  "type": "module",
  "author": "GameRoMan",
  "license": "MIT",
  "scripts": {
    "gen:schemas": "bun ./scripts/gen-schemas && bun run format",
    "gen:client": "bun ./scripts/gen-client && bun run format",
    "gen:full": "bun ./scripts/gen-schemas && bun ./scripts/gen-client && bun run format",
    "test": "bun test",
    "test:types": "bunx tsc --noEmit",
    "format": "bunx biome format --write",
    "build": "bunx --bun tsdown",
    "npm:publish": "bun publish --access public"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@lichess-org/types": "^2.0.110",
    "@types/bun": "^1.3.5",
    "tsdown": "^0.18.1",
    "typescript": "^5.9.3"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./dist/index.mjs",
    "./schemas": "./dist/schemas.mjs",
    "./package.json": "./package.json"
  }
}
